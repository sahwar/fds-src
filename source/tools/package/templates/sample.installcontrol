#!/bin/bash
#==================================================================================================
# Install Control script
# - will be called during install & remove
# the script will be called as :
# scriptname [(pre/post)(install/remove) [otherargs]
# for other args: lookup
# https://www.debian.org/doc/debian-policy/ch-maintainerscripts.html#s-mscriptsinstact
# NOTE: This script removes the first argument before calling the respective functions
#==================================================================================================



#----------------------------------------------------------------
# Executes BEFORE installation
#----------------------------------------------------------------
function preInstall() {
    :;# empty statement
}

#----------------------------------------------------------------
# Executes AFTER installation
#----------------------------------------------------------------
function postInstall() {
    :;# empty statement
}

#----------------------------------------------------------------
# Executes BEFORE remove/uninstall
#----------------------------------------------------------------
function preRemove() {
    :;# empty statement
}

#----------------------------------------------------------------
# Executes AFTER remove/uninstall
#----------------------------------------------------------------
function preRemove() {
    :;# empty statement
}

#----------------------------------------------------------------
# Main Program
#----------------------------------------------------------------
case "$1" in 
    preinstall)
        shift
        preInstall $@
        ;;

    postinstall)
        shift
        postInstall $@
        ;;

    preremove)
        shift
        preRemove $@
        ;;


    postremove)
        shift
        postRemove $@
        ;;

    *)
        echo "unknown mode ... $1" 
        exit 1
esac


        
